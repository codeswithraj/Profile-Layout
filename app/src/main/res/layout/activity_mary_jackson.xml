<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MaryJackson">
    <RelativeLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:background="@color/orange"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/orange"
            >

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:menu="@menu/menu"
                app:navigationIcon="@drawable/baseline_arrow_back_24"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_search_24"
                    android:layout_gravity="right"
                    />
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        android:layout_below="@+id/navbar">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/mary"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:civ_border_color="@color/white"
            app:civ_border_width="3dp"
            android:src="@drawable/shreya"
            android:layout_margin="15dp"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/mary"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="40dp"
            android:id="@+id/maryabout">
            <TextView
                android:id="@+id/marytitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mary Jackson"
                android:textColor="@color/white"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.7"
                android:textColor="@color/white"
                android:layout_below="@+id/marytitle"
                />
            <ImageView
                android:id="@+id/star"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/baseline_star_24"
                android:layout_below="@id/marytitle"
                android:layout_alignLeft="@id/rate"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="25dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- Interior Design"
                android:textColor="@color/white"
                android:layout_below="@+id/marytitle"
                android:layout_alignLeft="@id/star"
                android:layout_marginLeft="20dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/about"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/mary">
            <TextView
                android:id="@+id/about1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ABOUT"
                android:textColor="@color/white"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/follower"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_alignLeft="@+id/about"
            android:layout_below="@+id/mary">
            <TextView
                android:id="@+id/follower1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FOLLOWER"
                android:textColor="@color/white"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/following"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_alignLeft="@+id/follower"
            android:layout_below="@+id/mary">
            <TextView
                android:id="@+id/following1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FOLLOWING"
                android:textColor="@color/white"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile"
        android:id="@+id/information">
        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Information"
            android:textStyle="bold"
            android:layout_margin="15dp"
            android:textSize="16dp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
            android:textColor="@color/black"
            android:layout_below="@+id/info"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>
 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:id="@+id/icons"
     android:layout_below="@+id/information">
     <RelativeLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/icon"
         android:layout_marginTop="20dp"
         android:layout_marginLeft="15dp"
         >
         <de.hdodenhof.circleimageview.CircleImageView
             android:layout_width="70dp"
             android:layout_height="70dp"
             android:id="@+id/map"
             android:src="@drawable/baseline_place_24"
             android:background="@drawable/iconcircle"
             android:padding="20dp"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Website"
             android:layout_marginLeft="10dp"
             android:layout_below="@+id/map"/>
     </RelativeLayout>
     <RelativeLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/icon1"
         android:layout_marginTop="20dp"
         android:layout_marginLeft="95dp"
         android:layout_alignLeft="@+id/icon"
         >
         <de.hdodenhof.circleimageview.CircleImageView
             android:layout_width="70dp"
             android:layout_height="70dp"
             android:id="@+id/apart"
             android:src="@drawable/baseline_apartment_24"
             android:background="@drawable/iconcircle"
             android:padding="20dp"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Experience"
             android:layout_below="@+id/apart"/>
     </RelativeLayout>
     <RelativeLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/icon2"
         android:layout_marginTop="20dp"
         android:layout_marginLeft="95dp"
         android:layout_alignLeft="@+id/icon1"
         >
         <de.hdodenhof.circleimageview.CircleImageView
             android:layout_width="70dp"
             android:id="@+id/menus"
             android:layout_height="70dp"
             android:src="@drawable/baseline_menu_24"
             android:background="@drawable/iconcircle"
             android:padding="20dp"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Portfolio"
             android:layout_marginLeft="5dp"
             android:layout_below="@+id/menus"/>
     </RelativeLayout>
     <RelativeLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/icon3"
         android:layout_marginTop="20dp"
         android:layout_marginLeft="95dp"
         android:layout_alignLeft="@+id/icon2"
         >
         <de.hdodenhof.circleimageview.CircleImageView
             android:layout_width="70dp"
             android:id="@+id/stars"
             android:layout_height="70dp"
             android:src="@drawable/baseline_star_border_24"
             android:background="@drawable/iconcircle"
             android:padding="20dp"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Review"
             android:layout_marginLeft="10dp"
             android:layout_below="@+id/stars"/>
     </RelativeLayout>
 </RelativeLayout>
    <TextView
        android:id="@+id/photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Photos"
        android:layout_below="@+id/icons"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_margin="15dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/photo"
        android:layout_marginLeft="15dp"
        >
        <ImageView
            android:id="@+id/img1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/abhi"/>

        <ImageView
            android:id="@+id/img2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignLeft="@+id/img1"
            android:layout_marginLeft="95dp"
            android:src="@drawable/abhi" />
        <ImageView
            android:id="@+id/img3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignLeft="@+id/img2"
            android:layout_marginLeft="95dp"
            android:src="@drawable/abhi" />
        <ImageView
            android:id="@+id/img4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignLeft="@+id/img3"
            android:layout_marginLeft="95dp"
            android:src="@drawable/abhi" />
    </RelativeLayout>
</RelativeLayout>