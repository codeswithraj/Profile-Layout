<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".polygon">
    <RelativeLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:background="@drawable/background"
        android:layout_height="220dp">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            >

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:menu="@menu/menu"
                app:navigationIcon="@drawable/baseline_menu_24"
                app:titleTextColor="@color/white"
                app:title="Profile" >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_search_24"
                    android:layout_marginLeft="190dp"
                    />
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>
    </RelativeLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/shreyaimage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/shreya"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/navbar"
        android:layout_marginTop="-50dp"/>
    <RelativeLayout
        android:id="@+id/shreayabout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/navbar"
        android:layout_marginTop="60dp"
        >

        <TextView
            android:id="@+id/shreya"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shreyaimage"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Shreya Ghosal"
            tools:ignore="NotSibling" />

        <TextView
            android:id="@+id/shreyadescription"
            android:layout_width="match_parent"
            android:padding="20dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_below="@+id/shreya"
            android:textAlignment="center"
            android:text="Quisque imperdiet nunc at massa dictum volupat. Etiam id orci ipsum. Integer id ex dignissim."
            />
    </RelativeLayout>
    <Button
        android:id="@+id/followbtn"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:gravity="center"
        android:backgroundTint="@color/pink"
        android:textColor="@color/white"
        android:text="Follow"
        android:layout_below="@+id/shreayabout"
        />
    <RelativeLayout
        android:id="@+id/user1_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_below="@+id/followbtn"
        >
        <RelativeLayout
            android:id="@+id/follower_user1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/numerical_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="8825"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_below="@+id/numerical_number"
                android:text="Followers"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_toRightOf="@+id/follower_user1"
            android:id="@+id/following_user1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/numerical_number2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="1766"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_below="@+id/numerical_number2"
                android:text="Following"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_toRightOf="@+id/following_user1"
            android:id="@+id/score_user1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/numerical_number3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                android:text="8.5"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_below="@+id/numerical_number3"
                android:text="Social score"
                />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/user2_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_below="@+id/user1_data"
        >
        <RelativeLayout
            android:id="@+id/follower_user2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/numerical_number_user2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="8825"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_below="@+id/numerical_number_user2"
                android:text="Followers"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_toRightOf="@+id/follower_user2"
            android:id="@+id/following_user2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/numerical_number2_user2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="1766"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_below="@+id/numerical_number2_user2"
                android:text="Following"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_toRightOf="@+id/following_user2"
            android:id="@+id/score_user2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/numerical_number3_user2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:text="8.5"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_below="@+id/numerical_number3_user2"
                android:text="Social score"
                />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>